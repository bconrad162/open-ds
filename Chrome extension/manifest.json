{
  "manifest_version": 3,
  "name": "OpenDS Web",
  "version": "0.1.0",
  "description": "Web UI for OpenDS using a local bridge.",
  "action": {
    "default_title": "OpenDS"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws://127.0.0.1:5805 ws://localhost:5805"
  }
}
